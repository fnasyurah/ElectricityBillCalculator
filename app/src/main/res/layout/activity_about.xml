<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="20dp"/>

        <!-- App Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electricity Bill Calculator app is developed to calculate electricity bills efficiently"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:paddingHorizontal="10dp"/>



        <!-- Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:elevation="4dp">

            <!-- Student Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Name: NUR FATN NASYURAH BINTI MOHD SHUKOR"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student ID: 2023638086"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course: ICT602 Mobile Technology"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="10dp"/>

            <!-- GitHub Link -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source Code"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/githubLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Github Repository"
                android:textSize="16sp"
                android:textColor="#0D47A1"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(https://github.com/fnasyurah/ElectricityBillCalculator.git)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:orientation="vertical"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <!-- Copyright -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Nur Fatin Nasyurah. All rights reserved.\nICT602 Mobile Technology Assignment"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp"/>

    </LinearLayout>
</ScrollView>