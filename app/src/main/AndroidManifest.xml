<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/electricitybillcalculator"
        android:label="@string/app_name"
        android:roundIcon="@drawable/electricitybillcalculator"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElectricityBillCalculator"
        tools:targetApi="31">

        <!-- Landing Activity (New Launcher) -->
        <activity
            android:name=".LandingActivity"
            android:exported="true"
            android:theme="@style/Theme.ElectricityBillCalculator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity (Calculator) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".BillsActivity"
            android:exported="false" />

        <activity
            android:name=".BillDetailActivity"
            android:exported="false" />

        <activity
            android:name=".AboutActivity"
            android:exported="false" />

    </application>

</manifest>